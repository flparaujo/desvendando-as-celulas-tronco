<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".activity.PresentationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/presentation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Sobre o App"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ToolBarTheme"/>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/presentation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@android:color/white">

        <TextView
            android:padding="10dp"
            android:id="@+id/presentation_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyle"
            android:text="apresentação"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>